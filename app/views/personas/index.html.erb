<div class="row">
  <div class="col-md-12">
    <table class="table">
      <% @personas.each do |persona| %>
        <tr>
          <td>
            <%= link_to persona.cedula, persona_path(persona) %>
          </td>
          <td><%= persona.nombre %></td>
          <td><%= persona.email %></td>
          <td>
            <%= link_to "Editar", edit_persona_path(persona) %>
          </td>
          <td>
            <%= link_to "Eliminar", persona_path(persona), method: :delete, data: {confirm: "¿Está seguro?"} %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
